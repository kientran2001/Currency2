<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="#FFEBEE"
        android:padding="5dp"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_valDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="$ 0"
            android:textColor="@color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/tv_dollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="United State - Dollar"
            android:textColor="@color/black"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/tv_valDong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ä‘ 0"
            android:textSize="40sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/tv_dong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vietnam - Dong"
            android:textColor="@color/black"
            android:textSize="40sp"/>

        <TextView
            android:id="@+id/tv_quydoi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1 USD = 23,185.00 VND \n Update 5/31/2022 5:24 PM"/>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5">

        <TableRow
            android:layout_weight="1"
            android:weightSum="3"
            android:gravity="right">

            <Button
                android:id="@+id/bang"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:textSize="30sp"
                android:layout_weight="1"
                android:onClick="btnClick"></Button>

            <Button
                android:id="@+id/ce"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CE"
                android:textSize="30sp"
                android:onClick="btnClick"></Button>

            <Button
                android:id="@+id/x"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="x"
                android:textSize="30sp"
                android:textColor="@android:color/holo_red_dark"
                android:onClick="btnClick"></Button>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:id="@+id/btn7"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="7"
                android:textSize="30sp"
                android:onClick="btnClick"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn8"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="8"
                android:textSize="30sp"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn9"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="9"
                android:textSize="30sp"></Button>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn4"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="4"
                android:textSize="30sp"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn5"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="5"
                android:textSize="30sp"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn6"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="6"
                android:textSize="30sp"></Button>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:weightSum="3">

            <Button
                android:layout_margin="2dp"
                android:onClick="btnClick"
                android:id="@+id/btn1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="1"
                android:textSize="30sp"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn2"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="2"
                android:textSize="30sp"></Button>

            <Button
                android:onClick="btnClick"
                android:id="@+id/btn3"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:text="3"
                android:textSize="30sp"></Button>

        </TableRow>


        <TableRow
            android:layout_weight="1"
            android:weightSum="3"
            android:gravity="right">

            <Button
                android:id="@+id/rong2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:layout_weight="1"></Button>

            <Button
                android:id="@+id/btn0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="#F9FBE7"
                android:onClick="btnClick"
                android:text="0"
                android:textSize="30sp"></Button>

            <Button
                android:layout_marginBottom="2dp"
                android:id="@+id/btn_cham"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"></Button>

        </TableRow>
    </TableLayout>


</LinearLayout>
